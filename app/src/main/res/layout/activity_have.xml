<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HaveActivity">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- 검색 창 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:radius="8dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="검색어를 입력해주세요"
                android:background="@null"
                android:padding="8dp"
                android:textSize="14sp"
                android:imeOptions="actionSearch"
                android:inputType="text" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Clear Search"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 버튼 리스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_charger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="충전기"
                android:backgroundTint="#002D8C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_mouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마우스"
                android:backgroundTint="#002D8C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공학계산기"
                android:backgroundTint="#002D8C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보조배터리"
                android:backgroundTint="#002D8C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_locker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사물함"
                android:background="@drawable/outline_button"
                android:textColor="#002D8C"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_earphones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이어폰"
                android:backgroundTint="#002D8C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />


        </LinearLayout>

        <!-- 하단 네비게이션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="채팅"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_home"
                android:contentDescription="Home Icon"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="마이페이지"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>