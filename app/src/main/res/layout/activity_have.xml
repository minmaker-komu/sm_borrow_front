<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HaveActivity">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- 검색 창 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:radius="8dp">

            <EditText
                style="@style/SearchBar" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Clear Search"
                android:layout_gravity="center"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 버튼 리스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/btn_charger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="충전기"
                android:layout_margin="8dp"
                style="@style/CommonButton"/>
            <android.widget.Button
                android:id="@+id/btn_mouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마우스"
                android:layout_margin="8dp"
                style="@style/CommonButton"/>

            <android.widget.Button
                android:id="@+id/btn_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공학계산기"
                android:layout_margin="8dp"
                style="@style/CommonButton"/>
            <android.widget.Button
                android:id="@+id/btn_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보조배터리"
                android:layout_margin="8dp"
                style="@style/CommonButton"/>

            <android.widget.Button
                android:id="@+id/btn_locker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사물함"
                android:layout_margin="8dp"
                style="@style/CommonButton"/>
            <android.widget.Button
                android:id="@+id/btn_earphones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이어폰"
                android:layout_margin="8dp"
                style="@style/CommonButton" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/smlight"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActive="@style/TextAppearance.AppCompat.Medium"
        app:itemTextAppearanceInactive="@style/TextAppearance.AppCompat.Medium"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>