<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriceSelection">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/text_button_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택한 물품"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="물품 가격 선택"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- 부제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시간 당"
            android:textSize="14sp"
            android:textColor="#808080"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 가격 버튼 리스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/button_price_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500원"
                android:background="@drawable/outline_button"
                android:textColor="#002D8C"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_price_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000원"
                android:background="@drawable/outline_button"
                android:textColor="#002D8C"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_price_1500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1500원"
                android:background="@drawable/outline_button"
                android:textColor="#002D8C"
                android:layout_marginBottom="32dp"
                android:padding="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 특이사항 입력란 -->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="특이사항"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_special_note"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#F5F5F5"
            android:hint="특이사항을 입력하세요"
            android:padding="8dp"
            android:textSize="14sp"
            android:gravity="top"
            android:layout_marginBottom="24dp" />

        <!-- 등록 버튼 -->
        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"
            android:backgroundTint="#002D8C"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <!-- 하단 네비게이션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="채팅"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_home"
                android:contentDescription="홈"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="마이페이지"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>