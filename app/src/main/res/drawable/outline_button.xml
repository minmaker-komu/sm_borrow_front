<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 기본 상태 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 배경색 -->
            <stroke
                android:width="2dp"
                android:color="#002D8C" /> <!-- 테두리 색상과 두께 -->
            <corners android:radius="30dp" /> <!-- 모서리 둥글게 -->
        </shape>
    </item>

    <!-- 눌린 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#002D8C" /> <!-- 배경색 (눌린 상태) -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- 테두리 색상 (눌린 상태) -->
            <corners android:radius="30dp" /> <!-- 모서리 둥글게 -->
        </shape>
    </item>
</selector>
